<div class='flex-container'>
  <div class='flex-item'>
    <h1>Chef Tracker</h1>
    <p>{{availableChefs.length}} of our {{chefRoster}} chefs are cooking right now!</p>

    <p>Our {{chefRoster}} chefs teach {{totalStudents}} students</p>

    {{#each model as |chef|}}
      {{chef-list chef=chef}}
    {{/each}}
    <hr>

    {{input value=newChef}}
    <button {{action 'hireNewChef'}}>Hire Chef</button>
    </div>
  <div class='flex-item'>
    {{outlet}}
  </div>
</div>
